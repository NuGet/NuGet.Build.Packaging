<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!-- Allows fake frameworks to compile without errors -->
	<PropertyGroup>
		<ResolveAssemblyReferencesDependsOn />
    <TargetFrameworkRootPath>$(ProgramFiles)\Reference Assemblies\Microsoft\Framework\</TargetFrameworkRootPath>
	  <FrameworkPathOverride>$(TargetFrameworkRootPath).NETPortable\v4.6</FrameworkPathOverride>
  </PropertyGroup>
	<Target Name="CleanReferences" AfterTargets="ResolveAssemblyReferences">
		<ItemGroup>
			<ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" />
		</ItemGroup>
	</Target>
	<Target Name="AddSystemRuntime" AfterTargets="ResolveAssemblyReferences">
		<ItemGroup>
			<ReferencePath Include="@(ReferenceDependencyPaths)" />
		</ItemGroup>
	</Target>
</Project>